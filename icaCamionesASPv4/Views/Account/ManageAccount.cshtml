<!-- PAGE CONTAINER-->
<div class="page-container" style="padding-left: 250px;">
    <!-- MAIN CONTENT-->
    <div class="main-content" style="padding-top: 90px;">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <form method="post">
                                <div class="card-header">
                                    <strong>Datos:</strong> Usuario
                                </div>

                                <div class="card-body card-block">

                                    <div class="form-group" style="width:0px;height:0px;">
                                        <label for="COD_USU" class=" form-control-label" style="width:0px;height:0px; font-size:0rem; visibility:hidden">Código</label>
                                        <input type="text" id="COD_USU" value="@ViewBag.cod" name="COD_USU" class="form-control" style="width:0px;height:0px;visibility:hidden">
                                    </div>

                                    <div class="row">
                                        <div class="col-12 col-md-2">
                                            <div class="form-group">
                                                <label for="COD_USU" class=" form-control-label">Código</label>
                                                <div class="input-group">
                                                    <div class="input-group-addon">
                                                        <i class="fa fa-hashtag"></i>
                                                    </div>
                                                    <input type="text" id="COD_USU" value="@ViewBag.cod" name="COD_USU_DISABLE" class="form-control" disabled>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-12 col-md-4">
                                            <div class="form-group">
                                                <label for="NOM_USU" class=" form-control-label">Nombre</label>
                                                <div class="input-group">
                                                    <div class="input-group-addon">
                                                        <i class="fa fa-id-card"></i>
                                                    </div>
                                                    <input type="text" id="NOM_USU" name="NOM_USU" value="@ViewBag.nom" class="form-control" disabled>
                                                </div>

                                            </div>
                                        </div>

                                        <div class="col-12 col-md-4">
                                            <div class="form-group">
                                                <label for="NIC_USU" class=" form-control-label">Nickname</label>
                                                <div class="input-group">
                                                    <div class="input-group-addon">
                                                        <i class="fa fa-user"></i>
                                                    </div>
                                                    <input type="text" id="NIC_USU" name="NIC_USU" value="@ViewBag.nic" class="form-control" disabled>
                                                </div>
                                            </div>
                                        </div>

